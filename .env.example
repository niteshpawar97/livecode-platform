# === Production Environment Variables ===
# Copy this file to .env and fill in your values

# Your domain (used for CORS and cookies)
CORS_ORIGIN=https://yourdomain.com

# MySQL
DB_ROOT_PASSWORD=change_this_strong_root_password
DB_NAME=collab_editor
DB_USER=collab_user
DB_PASSWORD=change_this_strong_db_password

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_ACCESS_SECRET=generate_a_random_64_char_hex_string
JWT_REFRESH_SECRET=generate_another_random_64_char_hex_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_SALT_ROUNDS=12
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
